<config>
    <modules>
        <Oggetto_Opauth>
            <version>0.1.0</version>
        </Oggetto_Opauth>
    </modules>
    <global>
        <models>
            <oggetto_opauth>
                <class>Oggetto_Opauth_Model</class>
            </oggetto_opauth>
            <customer_resource>
                <rewrite>
                    <customer>Oggetto_Opauth_Model_Resource_Customer</customer>
                </rewrite>
            </customer_resource>
        </models>
        <helpers>
            <oggetto_opauth>
                <class>Oggetto_Opauth_Helper</class>
            </oggetto_opauth>
        </helpers>
        <resources>
            <oggetto_opauth_setup>
                <setup>
                    <module>Oggetto_Opauth</module>
                    <connection>core_setup</connection>
                </setup>
            </oggetto_opauth_setup>
        </resources>
        <blocks>
            <oggetto_opauth>
                <class>Oggetto_Opauth_Block</class>
            </oggetto_opauth>
        </blocks>
    </global>
    <default>
        <opauth>
            <general>
                <security_iteration>300</security_iteration>
                <security_timeout>2 minutes</security_timeout>
            </general>
        </opauth>
    </default>
    <frontend>
        <routers>
            <oggetto_opauth>
                <use>standard</use>
                <args>
                    <module>Oggetto_Opauth</module>
                    <frontName>opauth</frontName>
                </args>
            </oggetto_opauth>
        </routers>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <oggetto_opauth>
                    <file>oggetto_opauth.xml</file>
                </oggetto_opauth>
            </updates>
        </layout>
    </adminhtml>
</config>

